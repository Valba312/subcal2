cat > .replit <<'TOML'
run = "bash run.sh"
entrypoint = "package.json"

[env]
PORT = "3000"
NEXT_TELEMETRY_DISABLED = "1"
NODE_OPTIONS = "--max_old_space_size=2048"

[interpreter]
command = ["/bin/bash", "-lc"]

[packager]
TOML

# нормализуем переводы строкsed -i 's/\r$//' .replitpackageManager = "npm"
