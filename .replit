# .replit (чистый TOML, без EOF и т.п.)
cat > .replit <<'EOF'
run = "bash run.sh"
entrypoint = "package.json"

[env]
PORT = "3000"
NEXT_TELEMETRY_DISABLED = "1"
NODE_OPTIONS = "--max_old_space_size=2048"

[interpreter]
command = ["/bin/bash", "-lc"]

[packager]
packageManager = "npm"
EOF

# run.sh
cat > run.sh <<'EOF'
#!/usr/bin/env bash
set -e
# ставим зависимости один раз
if [ ! -d node_modules ]; then
  npm ci || npm install
fi
# Запуск Next на нужном хосте/порту
export PORT="${PORT:-3000}"
exec npm run dev
EOF

chmod +x run.sh
sed -i 's/\r$//' .replit run.sh
